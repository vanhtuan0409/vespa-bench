<services version="1.0" xmlns:deploy="vespa" xmlns:preprocess="properties">

<admin version="2.0">
  <configservers>
    <configserver hostalias="vespa-config" />
  </configservers>
  <cluster-controllers>
    <cluster-controller hostalias="vespa-config" />
  </cluster-controllers>
  <adminserver hostalias="vespa-config"/>
</admin>

<container id="default" version="1.0">
  <search/>
  <document-api/>
  <nodes>
    <node hostalias='vespa-search'/>
  </nodes>
</container>

<container id="generator" version="1.0">
  <document-processing>
    <chain id="embedding-generator" inherits="indexing">
      <documentprocessor id="com.anduin.vespa.EmbeddingGenerator" bundle="embedding-generator"/>
    </chain>
  </document-processing>
  <nodes>
    <node hostalias='vespa-docproc'/>
  </nodes>
</container>

<content id="doc" version="1.0">
  <redundancy>1</redundancy>
  <documents>
    <document mode="streaming" type="doc"/>
    <document-processing cluster="generator" chain="embedding-generator"/>
  </documents>
  <nodes>
    <node hostalias="vespa-content" distribution-key="0" />
  </nodes>
  <engine>
    <proton>
      <tuning>
        <searchnode>
          <summary>
            <io>
              <read>directio</read>
            </io>
          </summary>
        </searchnode>
      </tuning>
    </proton>
  </engine>
</content>

</services>
